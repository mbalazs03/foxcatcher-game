<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="foxcatcher.controller.LeaderboardController"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="tableView" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0"
               styleClass="table-view">
        <columns>
            <TableColumn fx:id="nameCol" prefWidth="250.0" styleClass="table-column" text="Name"/>
            <TableColumn fx:id="winnerCol" prefWidth="250.0" styleClass="table-column" text="Wins"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</AnchorPane>
